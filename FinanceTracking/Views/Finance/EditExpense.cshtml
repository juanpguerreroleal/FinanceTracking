@model FinanceTracking.Models.Expense

@{
    ViewData["Title"] = "EditExpense";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar gasto</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditExpense">
             @(Html.HiddenFor(m => m.UserId))
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label class="control-label">Tipo de gasto</label>
                <select asp-for="ExpenseCategoryId" class="form-control" asp-items="ViewBag.ExpenseCategoryId"></select>
                <span asp-validation-for="ExpenseCategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Nombre</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Descripcion</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Total</label>
                <input asp-for="Total" class="form-control" />
                <span asp-validation-for="Total" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Fecha de creacion</label>
                <input asp-for="CreationDate" class="form-control" type="date"/>
                <span asp-validation-for="CreationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver al listado</a>
</div>

